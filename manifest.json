{
  "author": "Hitpoint",
  "content_scripts": [
    {
      "css": [
        "css/extension.css"
      ],
      "js": [
        "js/extension.js"
      ]
    }
  ],
  "description": "IOTG300 gateway support",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "{nodeLoader} {path}",
      "primary_type": "adapter",
      "strict_max_version": "*",
      "strict_min_version": "0.10.0"
    }
  },
  "homepage_url": "https://github.com/kmchub/iotg300-adapter",
  "id": "iotg300-adapter",
  "license": "MPL-2.0",
  "manifest_version": 1,
  "name": "IOTG300",
  "short_name": "iotg300",
  "version": "0.0.1",
  "web_accessible_resources": [
    "css/*.css",
    "js/*.js",
    "views/*.html"
  ],
  "options": {
    "default": {
      "pollInterval": 1
    },
    "schema": {
      "type": "object",
      "required": [],
      "properties": {
        "pollInterval": {
          "type": "integer",
          "title": "The time in seconds after which the data is refreshed"
        }
      }
    }
  }
}
